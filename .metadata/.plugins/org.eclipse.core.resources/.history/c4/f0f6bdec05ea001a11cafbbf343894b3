#include <stdio.h>
#include <stdlib.h>
int sum();
int main(void) {
	int c;
	setbuf(stdout,NULL);
	printf("Enter 2 Numbers ");

	c=sum();
	printf("Result is %d",c);
	return EXIT_SUCCESS;
}

int sum(){
	int a,b,result;

	scanf("%d%d",&a,&b);

	result=a+b;
	return result;
}
